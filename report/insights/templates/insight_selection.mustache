{{!
    @template report_insights/insight_selection

    Template for the insight selection.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * uniqueid
    * togglegroup
    * allinsights
    * displayactionselement

    Example context (json):
    {
        "uniqueid": "12345",
        "togglegroup": "toggle-group-name",
        "allinsights": "{}",
        "displayactionselement": true
    }
}}

<div data-uniqueid="{{uniqueid}}"" data-region="insight-selection" data-togglegroup="{{togglegroup}}" data-allinsights="{{allinsights}}" class="d-inline-flex mb-1 mt-3 text-center">
    <div data-region="insight-selection-info" class="pr-2 align-self-center">
        <span aria-live="polite"></span>
    </div>
    {{#displayactionselement}}
        <div data-region="insight-selection-actions">
            <div class="dropdown">
                <button class="btn btn-sm btn-secondary dropdown-toggle rounded" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa fa-ellipsis-h fa-fw"></i>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton"></ul>
            </div>
        </div>
    {{/displayactionselement}}
</div>
