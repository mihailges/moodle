{{!
    @template core/chooser

    Chooser.

    Example context (json):
    {
        "title": "Chooser title",
        "method": "post",
        "actionurl": "http://example.org/test",
        "instructions": "Choose one:",
        "paramname": "param",
        "sections": [{
            "id": "section-1",
            "label": "Section one",
            "items": [{
                "label": "item one",
                "description": "description one"
            }]
        }]
    }
}}
<div id="modchooser_label" class="hd modchoosertitle">
    {{title}}
</div>

<div class="modchooserdialoguebody">
    <div class="modchoosercontainer" style="height: 450px;" aria-labelledby="modchooser_label" data-region="chooser-container" role="grid" aria-rowcount="1">
        <div class="modulescontainer" role="row" tabindex="0" data-region="chooser-options-container">
            {{#sections}}
                {{#items}}
                    {{>core_course/modchooser_item}}
                {{/items}}
            {{/sections}}
        </div>
    </div>
</div>