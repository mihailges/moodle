            <a href="{{{moveupurl}}}" title="{{#str}} movechapterup, mod_book, {{titleunescaped}} {{/str}}">{{#pix}}t/up, moodle, {{#str}} movechapterup, mod_book, {{title}} {{/str}}{{/pix}}</a>
        {{/moveupurl}}
        {{#movedownurl}}
            <a href="{{{movedownurl}}}" title="{{#str}} movechapterdown, mod_book, {{titleunescaped}} {{/str}}">{{#pix}}t/down, moodle, {{#str}} movechapterdown, mod_book, {{title}} {{/str}}{{/pix}}</a>
        {{/movedownurl}}
